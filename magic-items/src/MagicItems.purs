      , P
        [ B "Sunlight."
        , T " As an action, you can expend 5 charges while presenting the holy symbol to make it shed bright light in a 30-foot radius and dim light for an additional 30 feet. The light is sunlight and lasts for 10 minutes or until you end the effect (no action required)."
        ]
      ]
    }
  , { title: "Horn of Beckoning Death"
    , url: "https://dnd5e.wikidot.com//wondrous-items:horn-of-beckoning-death"
    , rarity: [RarityLegendary]
    , itemtype: TypeItem Nothing
    , attunement: Attune (Just "sorcerer, warlock, or wizard")
