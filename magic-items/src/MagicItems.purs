        [ B "Random Properties."
        , T " The "
        , I "Stone of Golorr"
        , T " has the following properties, determined by rolling on the tables in the \"Artifacts\" section in chapter 7 of the "
        , I "Dungeon Master's Guide"
        , T ":"
        ]
      , UL
        [ 
          [ T "1 minor beneficial property"
          ]
        , 
          [ T "1 minor detrimental property"
          ]
        ]
      , P
        [ B "Legend Lore."
        , T " The "
