          ]
        , 
          [ T "Armor Class: 12 (natural armor)"
          ]
        , 
          [ T "Hit Points: 26 (4d10 + 4)"
          ]
        , 
          [ T "Speed: 30 ft., fly 60ft."
          ]
        ,           []
        , 
          [ T "10 (+0)"
