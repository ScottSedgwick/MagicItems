  , { title: "Well of Many Worlds"
    , url: "https://dnd5e.wikidot.com//wondrous-items:well-of-many-worlds"
    , rarity: [RarityLegendary]
    , itemtype: TypeItem Nothing
    , attunement: AttuneNone
    , source: [SourceDMG]
    , description:
      [ P
