        [ 
          [ T "10 ft. away or closer"
          , T "8 x the number of charges in the staff"
          ]
        , 
          [ T "11 to 20 ft. away"
          , T "6 x the number of charges in the staff"
          ]
        , 
          [ T "21 to 30 ft. away"
          , T "4 x the number of charges in the staff"
          ]
        ]
      ]
    }
