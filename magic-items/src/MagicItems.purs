          ]
        ]
      ]
    }
  , { title: "Hell Hound Cloak"
    , url: "https://dnd5e.wikidot.com//wondrous-items:hell-hound-cloak"
    , rarity: [RarityRare]
    , itemtype: TypeItem Nothing
    , attunement: Attune Nothing
    , source: [SourceTalesFromTheYawningPortal]
    , description:
      [ P
        [ I "Wondrous item, rare (requires attunement)"
        ]
      , P
        [ T "This dark cloak is made of cured hell hound hide. As an action, you can command the cloak to transform you into a "
        , B "hell hound"
        , T " for up to 1 hour. The transformation otherwise functions as the "
        , A "http://dnd5e.wikidot.com/spell:polymorph" "Polymorph"
        , T " spell, but you can use a bonus action to revert to your normal form."
        ]
