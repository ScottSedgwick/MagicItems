  , { title: "Rope of Entanglement"
    , url: "https://dnd5e.wikidot.com//wondrous-items:rope-of-entanglement"
    , rarity: [RarityRare]
    , itemtype: TypeItem Nothing
    , attunement: AttuneNone
    , source: [SourceDMG]
    , description:
      [ P
        [ I "Wondrous item, rare"
