      ]
    }
  , { title: "Circlet of Human Perfection"
    , url: "https://dnd5e.wikidot.com//wondrous-items:circlet-of-human-perfection"
    , rarity: [RarityUncommon]
    , itemtype: TypeItem Nothing
    , attunement: Attune (Just "humanoid")
