  , { title: "Dragon Mask"
    , url: "https://dnd5e.wikidot.com//wondrous-items:dragon-mask"
    , rarity: [RarityLegendary]
    , itemtype: TypeItem Nothing
    , attunement: Attune Nothing
    , source: [SourceTyrannyOfDragons]
